.page-top {
    height: 100%;
    width: 100%;
    position: relative;
    z-index: 0;
    transition: All 0.4s ease;
    background-color: white;
    -webkit-transition: All 0.4s ease;
}

.page {
    background-color: #1e1e1e;
}

.c-state1 {
    transform: rotate(0deg) scale(1) translate(100%, 0%);
    -webkit-transform: rotate(0deg) scale(1) translate(100%, 0%);
}

.indicator {
    height: 47px;
    opacity: 0.3;
    background-color: rgba(255, 6, 49, 0);
}

.page-bottom {
    height: 100%;
    width: 100%;
    z-index: 0;
    font-size: 13px;
}

.logo {
    width: 100%;
}

.picker-view-item {
    overflow-wrap: break-word;
    color: white;
    line-height: 47px;
    line-break: auto;
}

.picker-view-item-car {
    overflow-wrap: break-word;
    color: white;
    line-break: auto;
    font-size:10px;
}

.brand-view {
    width: 30%;
    height: 100%;
    background-color: white;
    position: fixed;
}

.brand-picker-view-tag {
    background-color: #dcdcdc;
    font-size: 10px;
    font-weight: bold;
    color: #000000;
    height: 15px;
    line-height: 15px;
    padding-left: 10px;
    text-align: justify;
}
.wxSortPickerViewTemTags {
    position: absolute;
    bottom: 5px;
    height: 95%;
    width: 20px;
    right: 0;
    background-color: black;
    color: white;
}

.brand-picker-view-item {
    height: 22px;
    background-color: white;
    line-height: 22px;
    border-bottom: 1px solid #eee;
    font-family: Helvetica, serif;
}

.brand-text {
    font-size: 10px;
    display: inline-block;
    vertical-align: top;
    padding-left: 5px;
}

.brand-trademark {
    margin: 2px 2px 2px 10px;
    width: 18px;
    height: 18px;
    display: inline-block;
}

.car-picker-view {
    width: 70%;
    height: 100%;
    margin-left: 30%;
    /*margin-top: 60px;*/
    position: fixed;
    text-align: center;
}

.navigator {
    width: 40px;
    height: 40px;
    display: flex;
    background-color: rgba(242, 242, 242, 0.909804);
    border-radius: 40px;
    align-items: center;
    justify-content: center;
    position: fixed;
    top: 85px;
    left: 5px;
    z-index: 10;
}

.navigator-image {
    width: 25px;
    height: 25px;
}

.picker-view-column{
    background-color: black;
}
.detailed-item{
    padding:5px 12px;
    position:relative;
    display:-webkit-box;
    display:-webkit-flex;
    display:flex;
    -webkit-box-align:center;
    -webkit-align-items:center;
    align-items:center;
    font-size:20px;
    border-bottom:1px solid rgb(237, 237, 237);
    border-right:1px solid rgb(237,237,237);
}
.detailed-item-description {
    -webkit-box-flex:1;
    -webkit-flex:1;
    flex:1;
    font-size:14px;
    color:#999999;
}
.detailed-item-data {
    text-align:right;
    color:black;
    font-size:16px;
}
.detailed-item-color {
    text-align:center;
    background-color: white;
    overflow: hidden;
    height: 30px;
    padding:0 10px;
}
