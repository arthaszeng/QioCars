.page-top {
    height: 100%;
    width: 100%;
    position: relative;
    z-index: 0;
    transition: All 0.4s ease;
    background-color: white;
    -webkit-transition: All 0.4s ease;
}

.c-state1 {
    transform: rotate(0deg) scale(1) translate(100%, 0%);
    -webkit-transform: rotate(0deg) scale(1) translate(100%, 0%);
}

.page-bottom {
    height: 100%;
    width: 100%;
    z-index: 0;
    font-size: 13px;
}

.logo {
    width: 100%;
}

.picker-view-item {
    overflow-wrap: break-word
}

.brand-view {
    width: 30%;
    height: 100%;
    background-color: beige;
    position: fixed;
}

.brand-picker-view-tag {
    background-color: #ebebeb;
    font-size: 10px;
    font-weight: bold;
    color: #000;
    height: 15px;
    line-height: 15px;
    padding-left: 10px;
}

.brand-picker-view-item {
    height: 22px;
    background-color: white;
    line-height: 22px;
    border-bottom: 1px solid #eee;
}

.brand-text {
    font-size: 10px;
    display: inline-block;
    vertical-align: top;
    padding-left: 5px;
}

.brand-trademark {
    margin: 2px 2px 2px 10px;
    width: 18px;
    height: 18px;
    display: inline-block;
}

.car-picker-view {
    width: 70%;
    height: 400px;
    margin-left: 30%;
    margin-top: 60px;
    position: fixed;
    text-align: center;
}