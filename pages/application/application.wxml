<view>
    <form>
        <view class="section">
            <input
                    name="name"
                    value="{{name}}"
                    bindinput="updateName"
                    placeholder="姓名"
                    disabled="{{role=='HR' ? true : false}}"
            />
        </view>
        <view class="section">
            <input
                    name="github"
                    value="{{githubAccount}}"
                    bindinput="updateGithub"
                    placeholder="GitHub账号"
                    disabled="{{role=='HR' ? true : false}}"
            />
        </view>
        <view class="section">
            <input
                    name="email"
                    value="{{email}}"
                    bindinput="updateEmail"
                    placeholder="邮箱"
                    disabled="{{role=='HR' ? true : false}}"
            />
        </view>
        <view class="section">
            <textarea
                    name="phoneNumber"
                    value="{{phoneNumber}}"
                    bindinput="updatePhoneNumber"
                    placeholder="电话号码"
                    auto-height="true"
                    disabled="{{role=='HR' ? true : false}}"
            >
                <button style="display: {{role === 'HR' ? 'inline': 'none'}}" class="add tappable" bindtap="callPhone">Call</button>
            </textarea>

        </view>
        <view class="section">
            <textarea
                    name="details"
                    value="{{details}}"
                    bindinput="updateDetails"
                    placeholder="更多信息"
                    auto-height="true"
                    disabled="{{role=='HR' ? true : false}}"
            />
        </view>
        <!--<button bindtap="addApplication" class="submit-btn" wx:if="{{role !== 'HR'}}">申请</button>-->
        <button bindtap="addApplication" class="submit-btn">申请</button>
        <!--<button bindtap="transitionToApplications" class="submit-btn" wx:if="{{role === 'HR'}}">返回</button>-->
        <button bindtap="transitionToApplications" class="submit-btn">返回</button>
    </form>
</view>
