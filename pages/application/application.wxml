<view>
    <form>
        <view class="section">
            <input name="name"
                   value="{{name}}"
                   bindblur="updateName"
                   placeholder="姓名"
            />
        </view>
        <view class="section">
            <input
                    name="github"
                    value="{{github}}"
                    bindblur="updateGithub"
                    placeholder="GitHub账号"
            />
        </view>
        <view class="section">
            <input
                    name="email"
                    value="{{email}}"
                    bindblur="updateEmail"
                    placeholder="邮箱"
            />
        </view>
        <view class="section">
            <input name="phoneNumber"
                   value="{{phoneNumber}}"
                   bindblur="updatePhoneNumber"
                   placeholder="电话号码"
                   maxlength="11"
                   auto-height="true"
            />
            <button style="display: {{role === 'HR' ? 'inline': 'none'}}" class="add tappable" bindtap="callPhone">Call</button>
        </view>
        <view class="section">
            <textarea
                    name="details"
                    value="{{details}}"
                    bindblur="updateDetails"
                    placeholder="更多信息"
                    auto-height="true"
                    auto-focus="true"
            />
        </view>
        <button bindtap="onSubmit" class="submit-btn" wx:if="{{!applicationId}}">申请</button>
        <button bindtap="modifyApplication" class="submit-btn" wx:if="{{!!applicationId}}">修改</button>
        <button bindtap="transitionToApplications" class="submit-btn">返回</button>
    </form>
</view>
